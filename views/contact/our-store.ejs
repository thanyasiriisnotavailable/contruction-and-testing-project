    <style>
      /* Mobile View */
      @media (max-width: 767px) {
        .infoshop .map {
          width: 100%;
          height: 100%;
        }

        .infoshop p {
          text-align: center;
          display: flex;
          justify-content: center;
          align-items: center;
          font-size: 14px;
          text-align: left;
        }

        .btn-locate {
          margin-top: 20px;
        }

        .container {
          padding: 10px;
          display: flex;
          justify-content: center;
          align-items: center;
        }
        .contactus h3 {
          font-size: 20px;
        }

        .contactus p {
          font-size: 16px;
        }

        .center-links a {
          font-size: 16px;
        }

        .infoshop p {
          font-size: 16px;
          text-align: left;
          margin-left: 40px;
        }

        .infoshop .btn-locate button,
        .infoshop .btn-locate a {
          width: 200px;
          font-size: 16px;
        }

        .infoshop .btn-locate a {
          font-size: 10px;
        }

        .infoshop ul {
          list-style-type: none;
          margin-top: 20px;
          font-size: 14px;
          margin-left: 60px;
        }

        .infoshop h5 {
          text-align: left;
          margin-top: 50px;
          margin-left: 100px;
        }

        .infoshop hr {
          margin-top: 10px;
        }

        #footer {
          text-align: center;
        }

        #footer .container-fluid {
          display: flex;
          justify-content: center;
          align-items: center;
        }

        #footer .container-fluid ul {
          list-style-type: none;
          margin: 0;
          padding: 5px;
        }

        #footer .conpyright li {
          font-size: 14px;
          margin-top: 20px;
        }
      }
    </style>
